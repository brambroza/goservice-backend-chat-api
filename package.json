{
  "name": "chat-api",
  "version": "0.1.0",
  "private": true,
  "description": "Express-based Integration & Webhook service for LINE/FB/3rd-party",
  "scripts": {
    "start": "node dist/server.js",
    "start:dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "build": "tsc -p tsconfig.json",
    "lint": "eslint \"src/**/*.ts\"",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "dependencies": {
    "axios": "^1.6.8",
    "body-parser": "^1.20.2",
    "express": "^4.19.2",
    "kafkajs": "^2.2.4",
    "amqplib": "^0.10.4",
    "ioredis": "^5.4.1",
    "helmet": "^7.1.0",
    "socket.io": "^4.7.5",
    "joi": "^17.12.1",
    "morgan": "^1.10.0",
    "pino": "^8.19.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.11.30",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "prettier": "^3.2.5",
    "pino-pretty": "^11.0.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.4.2"
  }
